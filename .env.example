# .env.example
# 이 파일은 .env 파일의 형식을 보여주는 템플릿입니다.
# 실제 비밀 키를 여기에 저장하지 마세요.
# 이 파일을 .env 로 복사한 뒤, 각자의 키를 채워넣으세요.

# OpenAI API 키
OPENAI_API_KEY="sk-..."

# Gemini API 키
GOOGLE_API_KEY="AI..."

# Hugging Face Hub 토큰 (비공개 모델 접근 등)
HUGGING_FACE_HUB_TOKEN="hf_..."

# RDS DB 비밀번호
DB_PASSWORD=YOUR_RDS_DB_PASSWORD

# Gmail SMTP 앱 비밀번호 (Google 계정에서 생성)
MAIL_PASSWORD=YOUR_GMAIL_APP_PASSWORD

# JWT 서명용 비밀 키 (최소 32자 이상의 안전한 랜덤 문자열)
JWT_SECRET_KEY=your-super-super-long-and-secure-secret-key-for-jwt-hs256

# Google OAuth2 설정 (구글 클라우드 콘솔에서 발급받은 값)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Please enter the absolute path to your .pem key file.
# Example for Windows: DRHONG_PEM_KEY_PATH=C:\Users\YourUser\keys\drhong-bastion-key.pem
# Example for macOS/Linux: DRHONG_PEM_KEY_PATH=/Users/youruser/keys/drhong-bastion-key.pem
DRHONG_PEM_KEY_PATH=YOUR_DRHONG_PEM_KEY_PATH
DRHONG_APP_KEY_PATH=YOUR_DRHONG_APP_KEY_PATH

# GPU 가 없는 개발/테스트 환경에서는 FALSE, GPU 가 있는 배포 환경에서는 TRUE 로 설정해야 합니다.
IS_GPU_AVAILABLE=FALSE